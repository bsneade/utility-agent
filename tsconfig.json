{
    "compilerOptions":
    {
        "declaration": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths":
        {
            "*": [
                "node_modules/*"
            ]
        },
        "lib": [ "es6" ]
    },
    "include": [
        "src/**/*"
    ]
}